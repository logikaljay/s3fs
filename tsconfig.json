{
  "compilerOptions": {
    "lib": [
      "es2020"
    ],
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES2020",
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "declaration": true
  },
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}